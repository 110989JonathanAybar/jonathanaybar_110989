@model Parcial2.Models.Socio
@{
    ViewBag.Title = "Alta de socio";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> itemsTipoDocumento = (List<SelectListItem>)ViewBag.ItemsTipoDocumento;
    List<SelectListItem> itemsDeportes = (List<SelectListItem>)ViewBag.ItemsDeportes;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4 class="text-primary">
                Alta nuevo socio
            </h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Nombre:
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Apellido:
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Apellido, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Tipo documento:
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdTipoDocumento", itemsTipoDocumento, "Seleccione tipo documento", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Número documento:
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.NroDocumento, htmlAttributes: new { @class = "form-control", @id = "txtNroDocumento" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Deporte:
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdDeporte", itemsDeportes, "Seleccione deporte", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

